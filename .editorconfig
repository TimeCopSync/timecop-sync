root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true

# Space indents
[*.{yml,yaml,dart}]
charset = utf-8
indent_size = 2
indent_style = space

# Since Makefiles need to have a tab
[Makefile]
indent_style = tab
